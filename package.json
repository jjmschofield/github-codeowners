{
  "name": "github-codeowners",
  "version": "0.2.0",
  "description": "Handy tool for working with file ownership using Githubs CODEOWNERS file",
  "main": "dist/cli.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "rm -rf dist && tsc",
    "cli": "ts-node src/cli.ts",
    "cli:dist": "tsc && node dist/cli.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:unit": "jest",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "pretest:int": "rm -rf tests/scratch",
    "test:int": "env JEST_JUNIT_OUTPUT_DIR=./tests/reports/int jest --testMatch  **/*.test.int.ts --ci",
    "coveralls": "coveralls"
  },
  "author": "jjmschofield@googlemail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jjmschofield/github-codeowners"
  },
  "dependencies": {
    "commander": "^4.1.1",
    "ignore": "^5.1.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@types/node": "^13.7.6",
    "@types/uuid": "^8.0.0",
    "coveralls": "^3.1.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.3",
    "tslint-config-airbnb-base": "^0.3.0",
    "typescript": "^3.8.2",
    "uuid": "^8.2.0"
  },
  "bin": "dist/cli.js",
  "engines": {
    "node": ">=8.10"
  }
}
